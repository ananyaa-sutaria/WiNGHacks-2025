{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
        "module": "nodenext",
        "target": "es2017",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
